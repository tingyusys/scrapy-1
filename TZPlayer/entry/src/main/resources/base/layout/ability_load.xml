<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_main"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:top_margin="40vp"
        ohos:orientation="vertical">
        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:text="扫描本地歌曲"
            ohos:text_alignment="center"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="26fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:background_element="$graphic:func_bg"
        ohos:weight="1">
        <DirectionalLayout
            ohos:height="40fp"
            ohos:width="match_parent"
            ohos:top_margin="5fp"
            ohos:layout_alignment="center"
            ohos:orientation="horizontal">
            <Image
                ohos:id="$+id:load_button"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:image_src="$media:load"
                ohos:scale_mode="inside"
                ohos:layout_alignment="vertical_center"/>
        </DirectionalLayout>

        <ListContainer
            ohos:id="$+id:load_list_container"
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center"
            ohos:rebound_effect="true">
        </ListContainer>
    </DirectionalLayout>

<!--    歌曲信息-->
    <DirectionalLayout
        ohos:height="13vp"
        ohos:width="match_parent"
        ohos:orientation="vertical">
        <Text
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:text="稳稳地幸福-陈奕迅"
            ohos:text_alignment="center"/>
    </DirectionalLayout>
<!--    底部按钮-->
    <DirectionalLayout
        ohos:height="72vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:layout_alignment="center"
                ohos:background_element="$graphic:button_bg"
                ohos:image_src="$media:ic_himusic_previous"
                ohos:scale_mode="inside"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:ic_himusic_play"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:ic_himusic_next"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="45vp"
                ohos:width="45vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:no_like"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>