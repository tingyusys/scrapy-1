<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_main"
    ohos:orientation="vertical">
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:top_margin="40vp"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="我的播放器"
            ohos:text_alignment="center"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="26fp"/>
    </DirectionalLayout>

<!--    搜索栏-->
    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:top_margin="5vp"
        ohos:margin="10px">

       <TextField
           ohos:id="$+id:search_content"
           ohos:height="20vp"
           ohos:width="330vp"
           ohos:background_element="$graphic:search_bg"
           ohos:text_size="12fp"
           ohos:layout_alignment="horizontal_center"
           ohos:text_alignment="center"
           ohos:text_color="#999999"
           ohos:hint="爱我大中华"/>
       <Image
           ohos:height="20vp"
           ohos:width="20vp"
           ohos:scale_mode="zoom_center"
           ohos:image_src="$media:search_icon"
           ohos:align_right="$id:search_content"/>
    </DependentLayout>
<!--banner图-->
    <DirectionalLayout
        ohos:height="200vp"
        ohos:width="match_parent">
        <PageSlider
            ohos:id="$+id:banner"
            ohos:height="match_parent"
            ohos:width="match_parent">
        </PageSlider>
    </DirectionalLayout>

<!--    导航栏-->
    <DirectionalLayout
        ohos:height="80vp"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:background_element="$graphic:func_bg"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp">

        <DirectionalLayout
            ohos:id="$+id:song_list"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:id="$+id:song_list_icon"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:func_songs"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="乐库"
                ohos:text_alignment="center"
                ohos:text_size="30px"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:song_like"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1"
            >
            <Image
                ohos:id="$+id:song_like_icon"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:func_like"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="喜欢"
                ohos:text_alignment="center"
                ohos:text_size="30px"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:song_history"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:id="$+id:song_history_icon"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:func_history"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="历史"
                ohos:text_alignment="center"
                ohos:text_size="30px"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:song_load"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:id="$+id:song_load_icon"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:func_load"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="导入"
                ohos:text_alignment="center"
                ohos:text_size="30px"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:song_queue"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:id="$+id:song_queue_icon"
                ohos:height="35vp"
                ohos:width="35vp"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:func_playlist"/>
            <Text
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:text="队列"
                ohos:text_alignment="center"
                ohos:text_size="30px"/>
        </DirectionalLayout>


    </DirectionalLayout>

<!--歌曲列表-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        ohos:top_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:weight="1"
        ohos:background_element="$graphic:func_bg">
        <ListContainer
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:layout_alignment="horizontal_center">
        </ListContainer>
    </DirectionalLayout>
<!--    进度条-->
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="20vp"
        ohos:right_margin="20vp"
        ohos:top_margin="10vp"
        ohos:orientation="vertical">
        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal">
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="13vp"
                ohos:text_color="#FFFFFF"
                ohos:layout_alignment="vertical_center"
                ohos:text="00:00"/>


            <Text
                ohos:height="match_parent"
                ohos:width="0vp"
                ohos:weight="1"
                ohos:text="稳稳的幸福"
                ohos:text_alignment="horizontal_center"/>
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text_size="13vp"
                ohos:text_color="#FFFFFF"
                ohos:layout_alignment="vertical_center"
                ohos:text="00:00"/>
        </DirectionalLayout>
        <Slider
            ohos:height="13vp"
            ohos:width="match_parent"
            ohos:progress_color="#469BE7EA"
            ohos:background_instruct_element="#D21BB4CF"
            ohos:layout_alignment="vertical_center"
            ohos:weight="1"
            />
    </DirectionalLayout>

<!--控制栏-->

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:left_margin="10vp"
        ohos:right_margin="10vp"
        ohos:bottom_margin="10vp"
        ohos:top_margin="10vp">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:layout_alignment="center"
                ohos:background_element="$graphic:button_bg"
                ohos:scale_mode="inside"
                ohos:image_src="$media:remote_play_selected"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:layout_alignment="center"
                ohos:background_element="$graphic:button_bg"
                ohos:scale_mode="inside"
                ohos:image_src="$media:ic_himusic_previous"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:ic_himusic_play"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:ic_himusic_next"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">
            <Image
                ohos:height="45vp"
                ohos:width="45vp"
                ohos:background_element="$graphic:button_bg"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"
                ohos:image_src="$media:no_like"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DirectionalLayout>